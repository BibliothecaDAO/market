{
  "extends": "@ark-market/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "jsx": "preserve",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [
    "*.ts",
    "src",
    "src/svg.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
